---
import { useTranslations } from "../i18n/utils";
const lang = Astro.props.lang || "es";
const t = useTranslations(lang);
---

<section id="inicio" class="hero">
    <div class="hero-bg"></div>
    <div class="container hero-content">
        <h1 class="fade-in">
            {t("hero.title")}
            <br /><span class="italic">{t("hero.title.span")}</span>
        </h1>
        <p class="subtitle fade-in-delay">{t("hero.subtitle")}</p>
        <div class="cta-wrapper fade-in-delay-2">
            <a href="#libros" class="btn-primary">{t("hero.cta.primary")}</a>
            <a href="#autora" class="btn-secondary">{t("hero.cta.secondary")}</a
            >
        </div>
    </div>
</section>

<style>
    .hero {
        position: relative;
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
    }

    .hero-bg {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: radial-gradient(
            circle at 50% 50%,
            var(--hero-gradient-start) 0%,
            var(--hero-gradient-end) 100%
        );
        z-index: -1;
        transition: background 0.3s ease;
    }

    /* Decorative elements */
    .hero-bg::before {
        content: "";
        position: absolute;
        top: -50%;
        left: -20%;
        width: 800px;
        height: 800px;
        background: radial-gradient(
            circle,
            var(--hero-deco) 0%,
            transparent 60%
        );
        border-radius: 50%;
        filter: blur(80px);
    }

    .hero-content {
        text-align: center;
        max-width: 800px;
        padding-top: 60px; /* Account for header */
    }

    h1 {
        font-size: 5rem;
        line-height: 1.1;
        margin-bottom: 30px;
        letter-spacing: -0.02em;
        color: var(--color-text);
    }

    .italic {
        font-style: italic;
        color: var(--color-accent);
        font-weight: 300;
    }

    .subtitle {
        font-size: 1.25rem;
        max-width: 500px;
        margin: 0 auto 50px;
        font-weight: 300;
        color: var(--color-text-muted);
    }

    .cta-wrapper {
        display: flex;
        gap: 20px;
        justify-content: center;
    }

    .btn-primary {
        display: inline-block;
        padding: 15px 40px;
        background: var(--color-accent);
        color: var(--button-primary-text);
        font-family: var(--font-sans);
        font-weight: 500;
        letter-spacing: 0.1em;
        text-transform: uppercase;
        font-size: 0.9rem;
        border: none;
        transition:
            transform 0.3s ease,
            box-shadow 0.3s ease,
            color 0.3s ease;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 20px rgba(212, 175, 55, 0.2);
    }

    .btn-secondary {
        display: inline-block;
        padding: 15px 40px;
        background: transparent;
        color: var(--color-text);
        border: 1px solid var(--button-secondary-border);
        font-family: var(--font-sans);
        font-weight: 500;
        letter-spacing: 0.1em;
        text-transform: uppercase;
        font-size: 0.9rem;
        transition: all 0.3s ease;
    }

    .btn-secondary:hover {
        border-color: var(--color-text);
        background: var(--button-secondary-hover-bg);
    }

    /* Animations */
    .fade-in {
        opacity: 0;
        transform: translateY(30px);
        animation: fadeInUp 1s cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
    }

    .fade-in-delay {
        opacity: 0;
        transform: translateY(30px);
        animation: fadeInUp 1s cubic-bezier(0.2, 0.8, 0.2, 1) 0.3s forwards;
    }

    .fade-in-delay-2 {
        opacity: 0;
        transform: translateY(30px);
        animation: fadeInUp 1s cubic-bezier(0.2, 0.8, 0.2, 1) 0.6s forwards;
    }

    @keyframes fadeInUp {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @media (max-width: 768px) {
        h1 {
            font-size: 3rem;
        }
        .cta-wrapper {
            flex-direction: column;
            padding: 0 40px;
        }
    }
</style>
