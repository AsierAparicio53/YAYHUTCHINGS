---
import { useTranslations } from "../i18n/utils";
const lang = Astro.props.lang || "es";
const t = useTranslations(lang);
---

<section id="libros" class="section-padding books-section">
    <div class="container">
        <div class="section-header">
            <span class="eyebrow">{t("books.eyebrow")}</span>
            <h2>{t("books.title")}</h2>
        </div>

        <div class="books-grid">
            <!-- LIBRO 1 -->
            <article class="book-card">
                <div class="book-visual">
                    <div class="book-deco"></div>
                    <div class="book-cover">
                        <div class="book-front">
                            <img
                                src="/libro1.png"
                                alt={t("book1.title")}
                                class="cover-image"
                            />
                        </div>
                        <div class="book-back">
                            <img
                                src="/Libro1Contra.png"
                                alt="Contraportada"
                                class="cover-image"
                            />
                        </div>
                    </div>
                </div>
                <div class="book-info">
                    <h3>{t("book1.title")}</h3>
                    <p class="book-desc">
                        {t("book1.desc")}
                    </p>
                    <ul class="book-meta">
                        <li><span>{t("book1.published")}:</span> 2024</li>
                    </ul>
                    <div class="price-action">
                        <span class="price">15.00€</span>
                        <a
                            href="https://www.casadellibro.com/libro-viviendo-de-dolor/9788410828421/16485948"
                            class="btn-buy">{t("btn.buy")}</a
                        >
                    </div>
                </div>
            </article>

            <!-- LIBRO 2 -->
            <article class="book-card reverse">
                <div class="book-visual">
                    <div class="book-deco"></div>
                    <div class="book-cover">
                        <div class="book-front">
                            <!-- Portada Placeholder -->
                            <div class="cover-art art-2">
                                <span>Portada Libro 2</span>
                            </div>
                        </div>
                        <div class="book-back">
                            <div class="back-content">
                                <h4>{t("book2.title")}</h4>
                                <p class="back-excerpt">
                                    {t("book2.back.quote")}
                                </p>
                                <span class="publisher-logo">Yay Hutchings</span
                                >
                            </div>
                        </div>
                    </div>
                </div>
                <div class="book-info">
                    <h3>{t("book2.title")}</h3>
                    <p class="book-desc">
                        {t("book2.desc")}
                    </p>
                    <ul class="book-meta">
                        <li><span>{t("book2.published")}:</span> 2024</li>
                        <li><span>{t("book2.pages")}:</span> 145</li>
                    </ul>
                    <div class="price-action">
                        <span class="price">18.50€</span>
                        <a href="#" class="btn-buy">{t("btn.buy")}</a>
                    </div>
                </div>
            </article>
        </div>
    </div>
</section>

<style>
    .books-section {
        background: var(--color-bg);
        transition: background-color 0.3s ease;
    }

    .section-header {
        text-align: center;
        margin-bottom: 100px;
    }

    .eyebrow {
        font-family: var(--font-sans);
        text-transform: uppercase;
        letter-spacing: 0.2em;
        color: var(--color-accent);
        font-size: 0.8rem;
        margin-bottom: 15px;
        display: block;
    }

    h2 {
        font-size: 3rem;
        color: var(--color-text);
    }

    .books-grid {
        display: flex;
        flex-direction: column;
        gap: 150px;
    }

    .book-card {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 80px;
        align-items: center;
    }

    .book-card.reverse .book-visual {
        order: 2;
    }

    /* 3D Book Visuals */
    .book-visual {
        position: relative;
        perspective: 1500px;
        width: 300px;
        margin: 0 auto;
    }

    .book-cover {
        width: 300px;
        height: 450px;
        position: relative;
        transform-style: preserve-3d;
        transform: rotateY(0deg);
        transition: transform 0.8s cubic-bezier(0.2, 0.8, 0.2, 1);
        z-index: 10;
    }

    .book-visual:hover .book-cover {
        transform: rotateY(-180deg) translateX(-10px);
    }

    .book-front,
    .book-back {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        backface-visibility: hidden;
        border-radius: 2px 5px 5px 2px;
        box-shadow: inset 4px 0 10px rgba(0, 0, 0, 0.1);
    }

    .book-front {
        z-index: 2;
        background: var(--card-bg);
        transform: rotateY(0deg);
    }

    .book-back {
        transform: rotateY(180deg);
        background: var(--card-bg);
        border: 1px solid var(--header-border);
        box-shadow: -10px 10px 30px rgba(0, 0, 0, 0.3); /* Default (Dark) Shadow */
        overflow: hidden;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
    }

    /* REMOVE shadow in light mode as requested */
    :global([data-theme="light"]) .book-back {
        box-shadow: none;
        border-color: rgba(0, 0, 0, 0.1);
    }

    /* Spine styling */
    .book-spine {
        position: absolute;
        top: 0;
        left: 0;
        width: 40px;
        height: 100%;
        background: var(--book-spine);
        transform: rotateY(-90deg) translateX(-20px);
        transform-origin: left;
    }
    .book-deco {
        position: absolute;
        top: 6%;
        left: 8%;
        width: 100%;
        height: 100%;
        border: 1px solid var(--color-accent);
        z-index: 0;
        pointer-events: none;
        opacity: 0.5;
    }
    /* Back cover content styling */
    .back-content {
        padding: 40px;
    }

    .back-content h4 {
        font-family: var(--font-serif);
        color: var(--color-accent);
        font-size: 1.5rem;
        margin-bottom: 20px;
    }

    .back-excerpt {
        font-family: var(--font-serif);
        font-style: italic;
        color: var(--color-text-muted);
        line-height: 1.6;
        font-size: 1.1rem;
        margin-bottom: 40px;
    }

    .publisher-logo {
        font-family: var(--font-sans);
        text-transform: uppercase;
        letter-spacing: 0.2em;
        font-size: 0.7rem;
        color: var(--color-text-muted);
        margin-top: auto;
    }

    .cover-art {
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        border: 1px solid var(--header-border);
        background-size: cover;
        background-position: center;
    }

    .cover-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
        border-radius: 0 4px 4px 0;
    }

    .art-2 {
        background: linear-gradient(
            135deg,
            var(--card-bg),
            var(--color-bg-soft)
        );
        color: var(--color-text-muted);
    }

    /* Book Spine Effect - REMOVED */

    .book-info h3 {
        font-size: 2.5rem;
        margin-bottom: 20px;
        color: var(--color-text);
    }

    .book-desc {
        font-size: 1.1rem;
        margin-bottom: 30px;
        color: var(--color-text-muted);
    }

    .book-meta {
        list-style: none;
        padding: 0;
        margin-bottom: 40px;
        display: flex;
        gap: 40px;
        border-top: 1px solid var(--header-border);
        border-bottom: 1px solid var(--header-border);
        padding: 20px 0;
    }

    .book-meta li {
        display: flex;
        flex-direction: column;
        font-family: var(--font-sans);
        font-size: 0.9rem;
    }

    .book-meta span {
        color: var(--color-accent);
        text-transform: uppercase;
        font-size: 0.75rem;
        letter-spacing: 0.1em;
        margin-bottom: 5px;
    }

    .price-action {
        display: flex;
        align-items: center;
        gap: 30px;
    }

    .price {
        font-family: var(--font-serif);
        font-size: 2rem;
        color: var(--color-text);
    }

    .btn-buy {
        padding: 12px 35px;
        background: var(--color-text);
        color: var(--color-bg);
        font-family: var(--font-sans);
        text-transform: uppercase;
        font-weight: 600;
        letter-spacing: 0.1em;
        font-size: 0.85rem;
        transition: all 0.3s ease;
    }

    .btn-buy:hover {
        background: var(--color-accent);
        transform: translateY(-2px);
    }

    @media (max-width: 900px) {
        .book-card,
        .book-card.reverse {
            grid-template-columns: 1fr;
            text-align: center;
            gap: 50px;
        }

        .book-card.reverse .book-visual {
            order: 0;
        }

        .book-meta {
            justify-content: center;
        }

        .price-action {
            justify-content: center;
        }
    }
</style>
