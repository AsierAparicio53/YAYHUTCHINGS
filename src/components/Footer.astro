---
import { useTranslations } from "../i18n/utils";
const lang = Astro.props.lang || "es";
const t = useTranslations(lang);
---

<footer id="contacto" class="footer">
    <div class="container footer-content">
        <div class="footer-brand">
            <h3>Autora.</h3>
            <p>{t("footer.slogan")}</p>
        </div>

        <div class="footer-links">
            <h4>{t("footer.links")}</h4>
            <a href="#inicio">{t("nav.home")}</a>
            <a href="#autora">{t("nav.about")}</a>
            <a href="#libros">{t("nav.books")}</a>
        </div>

        <div class="footer-social">
            <h4>{t("footer.follow")}</h4>
            <div class="social-icons">
                <a href="#" aria-label="Instagram">Instagram</a>
                <a href="#" aria-label="Twitter">Twitter</a>
                <a href="#" aria-label="Goodreads">Goodreads</a>
            </div>
        </div>
    </div>
    <div class="bottom-bar">
        <p>
            &copy; {new Date().getFullYear()} Yay Hutchings. {
                t("footer.rights")
            }
        </p>
    </div>
</footer>

<style>
    .footer {
        background: var(--footer-bg);
        padding-top: 80px;
        border-top: 1px solid var(--footer-border);
        transition:
            background-color 0.3s ease,
            border-color 0.3s ease,
            box-shadow 0.3s ease;
    }

    :global([data-theme="light"]) .footer {
        box-shadow: 0 -4px 20px rgba(0, 0, 0, 0.05); /* Upward shadow */
        border-top-color: transparent;
    }

    .footer-content {
        display: grid;
        grid-template-columns: 2fr 1fr 1fr;
        gap: 50px;
        padding-bottom: 60px;
    }

    .footer-brand h3 {
        font-family: var(--font-serif);
        font-size: 2rem;
        margin-bottom: 20px;
        color: var(--color-text);
    }

    .footer-links,
    .footer-social {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    h4 {
        font-family: var(--font-sans);
        text-transform: uppercase;
        font-size: 0.8rem;
        letter-spacing: 0.1em;
        color: var(--color-accent);
        margin-bottom: 10px;
    }

    a {
        color: var(--color-text-muted);
        font-size: 0.95rem;
    }

    a:hover {
        color: var(--color-text);
    }

    .bottom-bar {
        border-top: 1px solid var(--footer-border);
        text-align: center;
        padding: 20px 0;
        color: var(--color-text-muted);
        font-size: 0.8rem;
    }

    @media (max-width: 768px) {
        .footer-content {
            grid-template-columns: 1fr;
            text-align: center;
        }
    }
</style>
